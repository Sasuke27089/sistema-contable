<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Sistema Contable</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 text-gray-800 min-h-screen">
    <header class="bg-white shadow">
      <div class="max-w-4xl mx-auto px-4 py-4 flex items-center justify-between">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 bg-indigo-600 rounded flex items-center justify-center text-white font-bold">SC</div>
          <div>
            <h1 class="text-lg font-semibold">Sistema Contable</h1>
            <p class="text-sm text-gray-500">Gestión y control de usuarios</p>
          </div>
        </div>
        <nav class="text-sm">
          <% if (locals && locals.session && locals.session.userId) { %>
            <span class="mr-4">Hola, <%= session.userName %></span>
            <a href="/dashboard" class="mr-3 text-indigo-600">Dashboard</a>
            <a href="/users" class="mr-3 text-indigo-600">Usuarios</a>
            <a href="/logout" class="text-red-500">Cerrar sesión</a>
          <% } else { %>
            <a href="/login" class="mr-3 text-indigo-600">Iniciar sesión</a>
            <a href="/register" class="text-indigo-600">Registro</a>
          <% } %>
        </nav>
      </div>
    </header>

    <main class="max-w-4xl mx-auto p-6">
      <%- body %>
    </main>

    <footer class="max-w-4xl mx-auto p-6 text-center text-sm text-gray-500">
      &copy; <%= new Date().getFullYear() %> Sistema Contable
    </footer>
  </body>
</html>
