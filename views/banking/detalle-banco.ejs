<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Detalle de Banco - Sistema Contable</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-50 text-gray-800 min-h-screen">
    <!-- HEADER -->
    <header class="bg-white shadow border-b border-gray-200">
      <div class="max-w-5xl mx-auto px-6 py-4">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-2xl font-bold text-gray-900"><%= typeof banco !== 'undefined' && banco ? banco.nombre : 'Banco' %></h1>
            <p class="text-sm text-gray-600"><%= typeof banco !== 'undefined' && banco ? 'C√≥digo: ' + banco.codigo_banco : '' %></p>
          </div>
          <a href="/banking" class="text-indigo-600 hover:text-indigo-700 font-medium">‚Üê Volver</a>
        </div>
      </div>
    </header>

    <main class="max-w-5xl mx-auto px-6 py-8">
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="bg-red-50 border border-red-200 text-red-700 p-4 rounded-lg mb-6">
          <%= error %>
        </div>
      <% } %>

      <!-- INFORMACI√ìN DEL BANCO -->
      <div class="bg-white rounded-lg shadow mb-8">
        <div class="bg-gradient-to-r from-blue-50 to-blue-100 px-8 py-6 border-b border-gray-200">
          <h2 class="text-lg font-bold text-gray-900">Informaci√≥n del Banco</h2>
        </div>
        <div class="p-6 grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide">Nombre</p>
            <p class="text-lg font-bold text-gray-900"><%= typeof banco !== 'undefined' && banco ? banco.nombre : 'N/A' %></p>
          </div>
          <div>
            <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide">C√≥digo</p>
            <p class="text-lg font-bold text-gray-900"><%= typeof banco !== 'undefined' && banco ? banco.codigo_banco : 'N/A' %></p>
          </div>
          <div>
            <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide">Cuenta Bancaria</p>
            <p class="text-lg font-bold text-gray-900"><%= typeof banco !== 'undefined' && banco ? banco.cuenta_bancaria : 'N/A' %></p>
          </div>
          <div>
            <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide">Tipo de Cuenta</p>
            <p class="text-lg font-bold text-gray-900"><%= typeof banco !== 'undefined' && banco ? banco.tipo_cuenta : 'N/A' %></p>
          </div>
          <div>
            <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide">Saldo Actual</p>
            <p class="text-xl font-bold text-green-600">$<%= typeof banco !== 'undefined' && banco ? parseFloat(banco.saldo_actual).toFixed(2) : '0.00' %></p>
          </div>
          <div>
            <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide">Fecha de Creaci√≥n</p>
            <p class="text-lg font-bold text-gray-900"><%= typeof banco !== 'undefined' && banco ? new Date(banco.fecha_creacion).toLocaleDateString('es-CO') : 'N/A' %></p>
          </div>
        </div>
      </div>

      <!-- ESTADOS DE CUENTA -->
      <div class="bg-white rounded-lg shadow">
        <div class="bg-gradient-to-r from-indigo-50 to-indigo-100 px-8 py-6 border-b border-gray-200 flex justify-between items-center">
          <h2 class="text-lg font-bold text-gray-900">Estados de Cuenta</h2>
          <a href="/banking/<%= typeof banco !== 'undefined' && banco ? banco.id : '#' %>/estado-cuenta/crear"
            class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 text-sm font-semibold transition">
            + Nuevo Estado
          </a>
        </div>

        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-gray-100 border-b border-gray-200">
              <tr>
                <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Referencia</th>
                <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Per√≠odo</th>
                <th class="px-6 py-3 text-right text-sm font-semibold text-gray-700">Depositos</th>
                <th class="px-6 py-3 text-right text-sm font-semibold text-gray-700">Retiros</th>
                <th class="px-6 py-3 text-center text-sm font-semibold text-gray-700">Acciones</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% if (typeof estados_cuenta !== 'undefined' && estados_cuenta && estados_cuenta.length > 0) { %>
                <% estados_cuenta.forEach(estado => { %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 text-sm font-medium text-gray-900"><%= estado.numero_referencia %></td>
                    <td class="px-6 py-4 text-sm text-gray-600">
                      <%= new Date(estado.fecha_desde).toLocaleDateString('es-CO') %> - <%= new Date(estado.fecha_hasta).toLocaleDateString('es-CO') %>
                    </td>
                    <td class="px-6 py-4 text-sm text-right font-semibold text-green-600">
                      $<%= parseFloat(estado.total_depositos).toFixed(2) %>
                    </td>
                    <td class="px-6 py-4 text-sm text-right font-semibold text-red-600">
                      $<%= parseFloat(estado.total_retiros).toFixed(2) %>
                    </td>
                    <td class="px-6 py-4 text-center">
                      <a href="/banking/<%= typeof banco !== 'undefined' && banco ? banco.id : '#' %>/estado-cuenta/<%= estado.id %>"
                        class="text-indigo-600 hover:text-indigo-700 text-sm font-semibold">Ver</a>
                      | 
                      <a href="/banking/<%= typeof banco !== 'undefined' && banco ? banco.id : '#' %>/estado-cuenta/<%= estado.id %>/importar"
                        class="text-blue-600 hover:text-blue-700 text-sm font-semibold">Importar CSV</a>
                    </td>
                  </tr>
                <% }); %>
              <% } else { %>
                <tr>
                  <td colspan="5" class="px-6 py-8 text-center text-gray-500">
                    No hay estados de cuenta registrados. <a href="/banking/<%= typeof banco !== 'undefined' && banco ? banco.id : '#' %>/estado-cuenta/crear" class="text-blue-600 font-semibold">Crear uno</a>
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- BOTONES DE ACCI√ìN -->
      <div class="flex gap-3 justify-between mt-8">
        <div class="flex gap-3">
          <a href="/banking" class="bg-gray-600 text-white px-6 py-2 rounded-lg hover:bg-gray-700 font-medium transition flex items-center gap-2 shadow">
            <span>üîô</span> Volver
          </a>
        </div>
        <a href="/dashboard" class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 font-medium transition flex items-center gap-2 shadow">
          <span>üö™</span> Salir
        </a>
      </div>
    </main>

    <footer class="bg-white border-t border-gray-200 mt-12">
      <div class="max-w-5xl mx-auto px-6 py-6 text-center text-sm text-gray-500">
        &copy; <%= new Date().getFullYear() %> Sistema Contable
      </div>
    </footer>
  </body>
</html>
