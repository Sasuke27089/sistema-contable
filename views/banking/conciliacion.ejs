<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Conciliaci√≥n Bancaria - Sistema Contable</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-50 text-gray-800 min-h-screen">
    <!-- HEADER -->
    <header class="bg-white shadow border-b border-gray-200">
      <div class="max-w-5xl mx-auto px-6 py-4">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-2xl font-bold text-gray-900">Conciliaci√≥n Bancaria</h1>
            <p class="text-sm text-gray-600">
              <% if (typeof banco !== 'undefined' && banco) { %>
                <%= banco.nombre %> - C√≥digo: <%= banco.codigo_banco %>
              <% } %>
            </p>
          </div>
          <a href="/banking" class="text-indigo-600 hover:text-indigo-700 font-medium">‚Üê Volver</a>
        </div>
      </div>
    </header>

    <main class="max-w-5xl mx-auto px-6 py-8">
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="bg-red-50 border border-red-200 text-red-700 p-4 rounded-lg mb-6">
          <%= error %>
        </div>
      <% } %>

      <% if (typeof success !== 'undefined' && success) { %>
        <div class="bg-green-50 border border-green-200 text-green-700 p-4 rounded-lg mb-6">
          <strong>‚úì √âxito:</strong> <%= success %>
        </div>
      <% } %>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
        <!-- CREAR NUEVA CONCILIACI√ìN -->
        <div class="bg-white rounded-lg shadow overflow-hidden">
          <div class="bg-gradient-to-r from-blue-50 to-blue-100 px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-bold text-gray-900">Nueva Conciliaci√≥n</h2>
          </div>
          <form method="POST" action="/banking/<%= typeof banco_id !== 'undefined' && banco_id ? banco_id : '#' %>/conciliacion" class="p-6 space-y-4">
            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2">Saldo de Libro (Seg√∫n Sistema) *</label>
              <input name="saldo_libro" type="number" step="0.01" required placeholder="0.00"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 text-lg font-semibold" />
              <p class="text-xs text-gray-500 mt-1">Saldo actual en el sistema contable</p>
            </div>
            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2">Saldo de Banco (Estado de Cuenta) *</label>
              <input name="saldo_banco" type="number" step="0.01" required placeholder="0.00"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 text-lg font-semibold" />
              <p class="text-xs text-gray-500 mt-1">Saldo reportado por el banco</p>
            </div>
            <button type="submit" class="w-full bg-green-600 text-white px-6 py-3 rounded-lg hover:bg-green-700 font-semibold transition">
              ‚úì Crear Conciliaci√≥n
            </button>
          </form>
        </div>

        <!-- √öLTIMAS CONCILIACIONES -->
        <div class="bg-white rounded-lg shadow overflow-hidden">
          <div class="bg-gradient-to-r from-indigo-50 to-indigo-100 px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-bold text-gray-900">Conciliaciones Recientes</h2>
          </div>
          <div class="p-6 space-y-3">
            <% if (typeof conciliaciones !== 'undefined' && conciliaciones && conciliaciones.length > 0) { %>
              <% conciliaciones.slice(0, 5).forEach(conc => { %>
                <div class="border border-gray-200 rounded p-3">
                  <div class="flex justify-between items-start mb-1">
                    <span class="text-sm font-semibold text-gray-900">
                      <%= new Date(conc.fecha_conciliacion).toLocaleDateString('es-CO') %>
                    </span>
                    <% if (conc.estado === 'conciliada') { %>
                      <span class="bg-green-100 text-green-800 px-2 py-1 rounded text-xs font-semibold">‚úì Conciliada</span>
                    <% } else if (conc.estado === 'pendiente') { %>
                      <span class="bg-yellow-100 text-yellow-800 px-2 py-1 rounded text-xs font-semibold">‚óã Pendiente</span>
                    <% } else { %>
                      <span class="bg-red-100 text-red-800 px-2 py-1 rounded text-xs font-semibold">‚úó Desbalanceada</span>
                    <% } %>
                  </div>
                  <div class="text-xs text-gray-600">
                    Diferencia: <strong class="<%= Math.abs(conc.diferencia) < 0.01 ? 'text-green-600' : 'text-red-600' %>">
                      $<%= Math.abs(conc.diferencia).toFixed(2) %>
                    </strong>
                  </div>
                </div>
              <% }); %>
            <% } else { %>
              <p class="text-sm text-gray-500 text-center py-4">Sin conciliaciones registradas</p>
            <% } %>
          </div>
        </div>
      </div>

      <!-- MOVIMIENTOS SIN CONCILIAR -->
      <div class="bg-white rounded-lg shadow mb-8">
        <div class="bg-gradient-to-r from-orange-50 to-orange-100 px-6 py-4 border-b border-gray-200 flex justify-between items-center">
          <h2 class="text-lg font-bold text-gray-900">Movimientos sin Conciliar</h2>
          <span class="bg-orange-600 text-white px-3 py-1 rounded-full text-sm font-semibold">
            <%= typeof movimientos_sin_conciliar !== 'undefined' && movimientos_sin_conciliar ? movimientos_sin_conciliar.length : 0 %>
          </span>
        </div>

        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-gray-100 border-b border-gray-200">
              <tr>
                <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Fecha</th>
                <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Concepto</th>
                <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Referencia</th>
                <th class="px-6 py-3 text-right text-sm font-semibold text-gray-700">Monto</th>
                <th class="px-6 py-3 text-center text-sm font-semibold text-gray-700">Acci√≥n</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% if (typeof movimientos_sin_conciliar !== 'undefined' && movimientos_sin_conciliar && movimientos_sin_conciliar.length > 0) { %>
                <% movimientos_sin_conciliar.forEach(mov => { %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 text-sm font-medium text-gray-900">
                      <%= new Date(mov.fecha).toLocaleDateString('es-CO') %>
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-700">
                      <strong><%= mov.concepto %></strong><br>
                      <span class="text-xs text-gray-500"><%= mov.descripcion %></span>
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-600"><%= mov.referencia %></td>
                    <td class="px-6 py-4 text-sm text-right font-semibold <%= mov.tipo === 'deposito' ? 'text-green-600' : 'text-red-600' %>">
                      <%= mov.tipo === 'deposito' ? '+' : '-' %>$<%= parseFloat(mov.monto).toFixed(2) %>
                    </td>
                    <td class="px-6 py-4 text-center">
                      <form method="POST" action="/banking/<%= typeof banco_id !== 'undefined' && banco_id ? banco_id : '#' %>/conciliar-movimiento/<%= mov.id %>" style="display:inline;">
                        <button type="submit" class="text-green-600 hover:text-green-700 text-sm font-semibold">‚úì Conciliar</button>
                      </form>
                    </td>
                  </tr>
                <% }); %>
              <% } else { %>
                <tr>
                  <td colspan="5" class="px-6 py-8 text-center text-gray-500">
                    ‚úì Todos los movimientos han sido conciliados
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- MOVIMIENTOS CONCILIADOS -->
      <div class="bg-white rounded-lg shadow mb-8">
        <div class="bg-gradient-to-r from-green-50 to-green-100 px-6 py-4 border-b border-gray-200 flex justify-between items-center">
          <h2 class="text-lg font-bold text-gray-900">Movimientos Conciliados</h2>
          <span class="bg-green-600 text-white px-3 py-1 rounded-full text-sm font-semibold">
            <%= typeof movimientos_conciliados !== 'undefined' && movimientos_conciliados ? movimientos_conciliados.length : 0 %>
          </span>
        </div>

        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-gray-100 border-b border-gray-200">
              <tr>
                <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Fecha</th>
                <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Concepto</th>
                <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Referencia</th>
                <th class="px-6 py-3 text-right text-sm font-semibold text-gray-700">Monto</th>
                <th class="px-6 py-3 text-center text-sm font-semibold text-gray-700">Acci√≥n</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% if (typeof movimientos_conciliados !== 'undefined' && movimientos_conciliados && movimientos_conciliados.length > 0) { %>
                <% movimientos_conciliados.forEach(mov => { %>
                  <tr class="hover:bg-gray-50 bg-green-50">
                    <td class="px-6 py-4 text-sm font-medium text-gray-900">
                      <%= new Date(mov.fecha).toLocaleDateString('es-CO') %>
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-700">
                      <strong><%= mov.concepto %></strong><br>
                      <span class="text-xs text-gray-500"><%= mov.descripcion %></span>
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-600"><%= mov.referencia %></td>
                    <td class="px-6 py-4 text-sm text-right font-semibold <%= mov.tipo === 'deposito' ? 'text-green-600' : 'text-red-600' %>">
                      <%= mov.tipo === 'deposito' ? '+' : '-' %>$<%= parseFloat(mov.monto).toFixed(2) %>
                    </td>
                    <td class="px-6 py-4 text-center">
                      <form method="POST" action="/banking/<%= typeof banco_id !== 'undefined' && banco_id ? banco_id : '#' %>/desconciliar-movimiento/<%= mov.id %>" style="display:inline;">
                        <button type="submit" class="text-red-600 hover:text-red-700 text-sm font-semibold">‚úó Desconciliar</button>
                      </form>
                    </td>
                  </tr>
                <% }); %>
              <% } else { %>
                <tr>
                  <td colspan="5" class="px-6 py-8 text-center text-gray-500">
                    No hay movimientos conciliados a√∫n
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- BOTONES DE ACCI√ìN -->
      <div class="flex gap-3 justify-between">
        <div class="flex gap-3">
          <a href="/banking" class="bg-gray-600 text-white px-6 py-2 rounded-lg hover:bg-gray-700 font-medium transition flex items-center gap-2 shadow">
            <span>üîô</span> Volver
          </a>
          <button onclick="print()" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 font-medium transition flex items-center gap-2 shadow">
            <span>üñ®Ô∏è</span> Imprimir
          </button>
        </div>
        <a href="/dashboard" class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 font-medium transition flex items-center gap-2 shadow">
          <span>üö™</span> Salir
        </a>
      </div>
    </main>

    <footer class="bg-white border-t border-gray-200 mt-12">
      <div class="max-w-5xl mx-auto px-6 py-6 text-center text-sm text-gray-500">
        &copy; <%= new Date().getFullYear() %> Sistema Contable
      </div>
    </footer>
  </body>
</html>
