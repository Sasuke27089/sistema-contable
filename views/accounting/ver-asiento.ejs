<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Ver Asiento - Sistema Contable</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-50 text-gray-800 min-h-screen">
    <!-- HEADER -->
    <header class="bg-white shadow border-b border-gray-200">
      <div class="max-w-7xl mx-auto px-6 py-4">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-2xl font-bold text-gray-900">Asiento N¬∞ <%= asiento.numero_asiento %></h1>
            <p class="text-sm text-gray-600">Detalles de la operaci√≥n contable</p>
          </div>
          <a href="/accounting/asientos" class="text-indigo-600 hover:text-indigo-700 font-medium">‚Üê Volver</a>
        </div>
      </div>
    </header>

    <main class="max-w-5xl mx-auto px-6 py-8">
      <!-- INFORMACI√ìN DEL ASIENTO -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
        <div class="bg-white rounded-lg shadow p-6 border-l-4 border-blue-600">
          <p class="text-sm text-gray-600 font-medium">Fecha</p>
          <p class="text-2xl font-bold text-blue-600 mt-1"><%= new Date(asiento.fecha).toLocaleDateString('es-ES') %></p>
        </div>
        <div class="bg-white rounded-lg shadow p-6 border-l-4 border-green-600">
          <p class="text-sm text-gray-600 font-medium">Estado</p>
          <p class="text-lg font-bold text-green-600 mt-1">
            <span class="bg-green-100 px-3 py-1 rounded-full text-sm"><%= asiento.estado %></span>
          </p>
        </div>
        <div class="bg-white rounded-lg shadow p-6 border-l-4 border-purple-600">
          <p class="text-sm text-gray-600 font-medium">Asiento N¬∞</p>
          <p class="text-2xl font-bold text-purple-600 mt-1"><%= asiento.numero_asiento %></p>
        </div>
      </div>

      <!-- DESCRIPCI√ìN -->
      <div class="bg-white rounded-lg shadow p-6 mb-6">
        <h3 class="font-semibold text-gray-900 mb-2">Descripci√≥n</h3>
        <p class="text-gray-700"><%= asiento.descripcion || '‚Äî' %></p>
      </div>

      <!-- L√çNEAS DEL ASIENTO -->
      <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="bg-gradient-to-r from-blue-50 to-blue-100 px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-bold text-gray-900">L√≠neas del Asiento</h3>
        </div>
        <div class="overflow-x-auto">
          <table class="w-full text-sm">
            <thead class="bg-gray-100 border-b border-gray-200">
              <tr>
                <th class="text-left p-4 font-semibold text-gray-700">C√≥digo</th>
                <th class="text-left p-4 font-semibold text-gray-700">Cuenta</th>
                <th class="text-left p-4 font-semibold text-gray-700">Descripci√≥n</th>
                <th class="text-right p-4 font-semibold text-gray-700">D√©bito</th>
                <th class="text-right p-4 font-semibold text-gray-700">Cr√©dito</th>
              </tr>
            </thead>
            <tbody>
              <% 
                let totalDebe = 0, totalHaber = 0;
                asiento.lineas.forEach(function(l, idx) { 
                  totalDebe += l.debe || 0;
                  totalHaber += l.haber || 0;
              %>
                <tr class="<%= idx % 2 === 0 ? 'bg-white' : 'bg-gray-50' %> border-b border-gray-200 hover:bg-indigo-50">
                  <td class="p-4 font-mono font-bold text-blue-600"><%= l.codigo %></td>
                  <td class="p-4 font-semibold text-gray-900"><%= l.nombre %></td>
                  <td class="p-4 text-gray-700"><%= l.descripcion || '‚Äî' %></td>
                  <td class="text-right p-4 font-semibold text-blue-600"><%= (l.debe || 0).toFixed(2) %></td>
                  <td class="text-right p-4 font-semibold text-red-600"><%= (l.haber || 0).toFixed(2) %></td>
                </tr>
              <% }) %>
              <tr class="bg-blue-100 border-t-2 border-blue-600 font-bold">
                <td colspan="3" class="p-4 text-gray-900">TOTALES</td>
                <td class="text-right p-4 text-blue-700 text-lg"><%= totalDebe.toFixed(2) %></td>
                <td class="text-right p-4 text-red-700 text-lg"><%= totalHaber.toFixed(2) %></td>
              </tr>
            </tbody>
          </table>
        </div>

        <!-- ESTADO DE EQUILIBRIO -->
        <div class="mt-6 mb-6 p-4 rounded-lg <%= Math.abs(totalDebe - totalHaber) < 0.01 ? 'bg-green-100 border border-green-500' : 'bg-red-100 border border-red-500' %>">
          <p class="font-semibold <%= Math.abs(totalDebe - totalHaber) < 0.01 ? 'text-green-700' : 'text-red-700' %>">
            <%= Math.abs(totalDebe - totalHaber) < 0.01 ? '‚úì Asiento Equilibrado' : '‚úï Asiento Desbalanceado' %>
          </p>
        </div>

        <!-- BOTONES DE ACCI√ìN -->
        <div class="flex gap-3 justify-between">
          <div class="flex gap-2">
            <button onclick="window.print()" class="bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 font-medium flex items-center gap-2 shadow transition">
              <span>üñ®Ô∏è</span> Imprimir
            </button>
          </div>
          <div class="flex gap-2">
            <a href="/accounting/asientos" class="bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 font-medium flex items-center gap-2 shadow transition">
              <span>‚Üê </span> Volver
            </a>
            <a href="/dashboard" class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 font-medium flex items-center gap-2 shadow transition">
              <span>üö™</span> Salir
            </a>
          </div>
        </div>
    </main>

    <footer class="bg-white border-t border-gray-200 mt-12">
      <div class="max-w-5xl mx-auto px-6 py-6 text-center text-sm text-gray-500">
        &copy; <%= new Date().getFullYear() %> Sistema Contable
      </div>
    </footer>
  </body>
</html>
