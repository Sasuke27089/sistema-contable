<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Cuentas - Sistema Contable</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-50 text-gray-800 min-h-screen">
    <!-- HEADER -->
    <header class="bg-white shadow border-b border-gray-200">
      <div class="max-w-7xl mx-auto px-6 py-4">
        <div class="flex items-center justify-between mb-4">
          <div>
            <h1 class="text-2xl font-bold text-gray-900">Cat√°logo de Cuentas</h1>
            <p class="text-sm text-gray-600">Gestiona el plan de cuentas de tu empresa</p>
          </div>
          <a href="/dashboard" class="text-indigo-600 hover:text-indigo-700 font-medium">‚Üê Volver</a>
        </div>
        <nav class="text-sm space-x-4 flex flex-wrap">
          <a href="/accounting/cuentas" class="text-green-600 font-semibold">Cuentas</a>
          <a href="/accounting/asientos" class="text-gray-600 hover:text-indigo-600">Asientos</a>
          <a href="/accounting/diario" class="text-gray-600 hover:text-indigo-600">Diario</a>
          <a href="/accounting/mayor" class="text-gray-600 hover:text-indigo-600">Mayor</a>
          <a href="/accounting/balance" class="text-gray-600 hover:text-indigo-600">Balance</a>
          <a href="/accounting/resultados" class="text-gray-600 hover:text-indigo-600">Resultados</a>
        </nav>
      </div>
    </header>

    <main class="max-w-7xl mx-auto px-6 py-8">
      <!-- BARRA DE ACCIONES -->
      <div class="mb-6 flex justify-between items-center flex-wrap gap-3">
        <div class="flex gap-2 flex-wrap">
          <a href="/accounting/cuentas/crear" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 font-semibold flex items-center gap-2 shadow transition">
            <span>+</span> Nueva Cuenta
          </a>
          <button onclick="window.print()" class="bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 font-medium flex items-center gap-2 shadow transition">
            <span>üñ®Ô∏è</span> Imprimir
          </button>
          <button onclick="exportarCSV()" class="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 font-medium flex items-center gap-2 shadow transition">
            <span>üì•</span> Descargar CSV
          </button>
        </div>
        <a href="/dashboard" class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 font-medium flex items-center gap-2 shadow transition">
          <span>üö™</span> Salir
        </a>
      </div>

      <% if (typeof error !== 'undefined' && error) { %>
        <div class="bg-red-50 border border-red-200 text-red-700 p-4 rounded-lg mb-6">
          <%= error %>
        </div>
      <% } %>

      <!-- TABLA DE CUENTAS -->
      <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="overflow-x-auto">
          <table class="w-full text-sm">
            <thead class="bg-gray-100 border-b border-gray-200">
              <tr>
                <th class="text-left p-4 font-semibold text-gray-700">C√≥digo</th>
                <th class="text-left p-4 font-semibold text-gray-700">Nombre</th>
                <th class="text-left p-4 font-semibold text-gray-700">Tipo</th>
                <th class="text-left p-4 font-semibold text-gray-700">Clase</th>
                <th class="text-right p-4 font-semibold text-gray-700">Saldo Deudor</th>
                <th class="text-right p-4 font-semibold text-gray-700">Saldo Acreedor</th>
                <th class="text-center p-4 font-semibold text-gray-700">Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% cuentas.forEach(function(c, idx) { %>
                <tr class="<%= idx % 2 === 0 ? 'bg-white' : 'bg-gray-50' %> border-b border-gray-200 hover:bg-indigo-50 transition">
                  <td class="p-4 font-mono font-semibold text-gray-900"><%= c.codigo %></td>
                  <td class="p-4"><%= c.nombre %></td>
                  <td class="p-4">
                    <span class="inline-block px-2 py-1 rounded text-xs font-semibold
                      <%= c.tipo === 'activo' ? 'bg-blue-100 text-blue-700' : 
                          c.tipo === 'pasivo' ? 'bg-red-100 text-red-700' : 
                          c.tipo === 'capital' ? 'bg-purple-100 text-purple-700' : 
                          c.tipo === 'ingreso' ? 'bg-green-100 text-green-700' : 
                          c.tipo === 'gasto' ? 'bg-orange-100 text-orange-700' : 
                          'bg-yellow-100 text-yellow-700' %>">
                      <%= c.tipo %>
                    </span>
                  </td>
                  <td class="p-4 text-gray-600"><%= c.clase %></td>
                  <td class="text-right p-4 font-mono"><%= c.saldo_deudor.toFixed(2) %></td>
                  <td class="text-right p-4 font-mono"><%= c.saldo_acreedor.toFixed(2) %></td>
                  <td class="text-center p-4">
                    <a href="/accounting/mayor/<%= c.id %>" class="text-indigo-600 hover:text-indigo-700 font-medium text-sm">Ver Mayor ‚Üí</a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>

      <% if (cuentas.length === 0) { %>
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-8 text-center">
          <p class="text-blue-700 font-semibold mb-4">No hay cuentas creadas</p>
          <a href="/accounting/cuentas/crear" class="inline-block bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700">
            Crear primera cuenta
          </a>
        </div>
      <% } %>
    </main>

    <footer class="bg-white border-t border-gray-200 mt-12">
      <div class="max-w-7xl mx-auto px-6 py-6 text-center text-sm text-gray-500">
        &copy; <%= new Date().getFullYear() %> Sistema Contable
      </div>
    </footer>

    <script>
      function exportarCSV() {
        const tabla = document.querySelector('table');
        const rows = Array.from(tabla.querySelectorAll('tr'));
        const csv = rows.map(row => {
          return Array.from(row.querySelectorAll('td, th'))
            .map(cell => `"${cell.textContent.trim()}"`)
            .join(',');
        }).join('\n');
        
        const link = document.createElement('a');
        link.href = 'data:text/csv;charset=utf-8,' + encodeURIComponent(csv);
        link.download = 'cuentas_' + new Date().toISOString().split('T')[0] + '.csv';
        link.click();
      }
    </script>
  </body>
</html>
